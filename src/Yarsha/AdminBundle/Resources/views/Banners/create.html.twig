{% extends "@YarshaAdmin/admin_layout.html.twig" %}

{% block page_title %} Banner {% endblock %}

{% block page_description %} {{ updating ? "Edit" : "Create" }} {% endblock %}


{% block content %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}


    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    {{ form_errors(form.file) }}

                    {{ form_start(form) }}

                    <div class="col-md-12 col-sm-12">
                        <label>Cover Picture</label>{{ form_widget(form.file) }}
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <label>Caption</label>{{ form_widget(form.caption) }}
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <label>Order</label>{{ form_widget(form.order) }}
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <label>Status</label>{{ form_widget(form.status) }}
                    </div>

                    <div class="col-md-2 col-sm-2" style="margin-top: 10px;">
                        <input type="submit" value="Add Banner" class="btn btn-primary">
                    </div>


                    {{ form_end(form) }}

                </div>

            </div>
        </div>
    </div>

{% endblock %}

