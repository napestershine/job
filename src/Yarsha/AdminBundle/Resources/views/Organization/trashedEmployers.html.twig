{% extends "@YarshaAdmin/admin_layout.html.twig" %}

{% block page_title %}Trashed Employers{% endblock %}

{% block page_description %}List{% endblock %}

{% block action_block %}

    <button class="btn btn-xs btn-default margin-r-5" title="filter" data-toggle="collapse" data-target="#filter">
        <i class="fa fa-filter"></i>
    </button>


    <a href="{{ path('yarsha_admin_organization_add') }}" class="btn btn-info btn-xs">
        <i class="fa fa-plus"></i> Add New Employer
    </a>

{% endblock %}

{% block filter %}

    <div class="row">
        <div class="form-group-sm col-md-3">
            <label for="name">Name</label>
            <input type="text" name="name" value="{{ app.request.get('name') }}" placeholder="company name"
                   class="form-control">
        </div>

        <div class="form-group-sm col-md-3">
            <label for="industry">Industry</label>
            {{ render_category_select_by_industry(app.request.get('industry')) }}
        </div>

    </div>

{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                {% if trashedEmployers | length %}
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                        <tr>
                            <th>SNo</th>
                            <th>Company Name</th>
                            <th>Industry</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for employer in trashedEmployers %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ employer.name }}</td>
                                <td>{{ employer.industry ? employer.industry.title : '--' }}</td>
                                <td>
                                    <a href="#" title="Restore employer" class="btn btn-success"
                                       onclick="restoreEmployer(event, this, {{ employer.id }})">
                                        <i class="fa fa-repeat"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger" title="Delete permenently"
                                       onclick="deleteEmployerPermanently(event, this, {{ employer.id }})">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    {{ ys_no_contents('No trashed employers.') }}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}

    <script>
        function restoreEmployer(e, obj, id) {
            e.preventDefault();
            modal = $("#myModal");
            c = confirm('Do you really want to restore this employer ??');
            if (c) {
                var url = "{{ path('yarsha_admin_ajax_restore_employer',{'id':'EMPLOYER_ID'}) }}";
                url = url.replace('EMPLOYER_ID', id);
                $.ajax({
                    url: url,
                    method: 'GET',
                    success: function (data) {
                        modal.find('.modal-title').html('Message');
                        if (data.success == true) {
                            $(obj).parent().parent().remove();
                            modal.find('.modal-body').html('<p class="text-success">' + data.message + '</p>');
                            modal.modal('toggle');
                        } else {
                            modal.find('.modal-body').html('<p class="text-danger">' + data.errorMessage + '</p>');
                            modal.modal('toggle');
                        }

                    },
                    error: function (data) {

                    }
                });
            }

        }

        function deleteEmployerPermanently(e, obj, id) {
            e.preventDefault();
            modal = $("#myModal");
            c = confirm("Are you sure?");
            if (c) {
                url = "{{ path('yarsha_admin_ajax_delete_employer_permenently', {'id':'EMPLOYER_ID'}) }}";
                url = url.replace('EMPLOYER_ID', id);
                $.ajax({
                    url: url,
                    method: "GET",
                    success: function (data) {
                        modal.find('.modal-title').html('Message');
                        if (data.success && data.success == true) {
                            modal.find('.modal-body').html(data.message);
                            $(obj).parent().parent().remove();
                        } else {
                            modal.find('.modal-body').html(data.errorMessage);
                        }
                        modal.modal('toggle');
                    }
                });
            }
        }


    </script>

{% endblock %}
