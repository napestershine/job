{% extends "YarshaAdminBundle::admin_layout.html.twig" %}

{% block page_title %} Organization Size {% endblock %}
{% block page_description %} List {% endblock %}

{% block action_block %}


    <a href="{{ path('yarsha_admin_organization_size_add') }}" class="btn btn-info btn-xs">
        <i class="fa fa-plus"></i> Add Organization Size
    </a>

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <table class="table table-striped table-hover table-condensed">
                    <thead>

                    <tr>
                        <th>SN</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    {% for o in organizationSizes %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ o.name }}</td>
                            <td>{{ o.status == 1 ? 'Active' : 'Not-active' }}</td>
                            <td>
                                <a href="{{ path('yarsha_admin_organization_size_edit', {'id':o.id}) }}"
                                   class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i> Edit
                                </a>
                                <a href="{{ path('yarsha_admin_organization_size_delete', {'id':o.id}) }}"
                                   class="btn btn-xs btn-danger"><i class="fa fa-times"></i>

                                    Delete

                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
