{% extends "YarshaAdminBundle::admin_layout.html.twig" %}

{% block page_title %} Organization Type {% endblock %}
{% block page_description %} List {% endblock %}

{% block action_block %}


    <a href="{{ path('yarsha_admin_organization_type_add') }}" class="btn btn-info btn-xs">
        <i class="fa fa-plus"></i> Add Organization Type
    </a>

{% endblock %}


{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                    <tr>
                        <td>SN</td>
                        <td>Name</td>
                        <td>Parent</td>
                        <td>Status</td>
                        <td>Action</td>
                    </tr>
                    </thead>
                    {% for o in organizationTypes %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ o.name }}</td>
                            <td>{{ o.parent == null ? '---' : o.parent.name }}</td>
                            <td>{{ o.status == 1 ? 'Active' : 'Not-active' }}</td>
                            <td>
                                <a href="{{ path('yarsha_admin_organization_type_edit', {'id':o.id}) }}"
                                   class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i> Edit
                                </a>
                                <a href="{{ path('yarsha_admin_organization_type_delete', {'id':o.id}) }}"
                                   class="btn btn-xs btn-danger"><i class="fa fa-times"></i>

                                    Delete

                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
