                            </div>
                            <div class="panel-body">
                                <form method="get" id="adminFilterForm">
                                    {{ _filterBlock|raw }}

                                    <div class="clearfix"></div>

                                    <div class="row margin-t-5">
                                        <div class="form-group-sm col-md-12">
                                            <input type="submit" class="btn btn-xs btn-primary" value="SEARCH">
                                        </div>
                                    </div>

                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% block content %}
