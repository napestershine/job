<div class="col-md-4 col-sm-4">
    <h3><i class="fa fa-newspaper-o" aria-hidden="true"></i> &nbsp;Latest News</h3>
    <ul class="hot-job-list btm-job-search-blk">
        {% for new in news %}
            <li>
                <div class="row">
                    <div class="col-md-3 col-sm-3 btm-job-left-blk">
                        {% if new.image | length %}
                            <img src="{{ asset('images/latest_news.png') }}" alt="">
                        {% else %}
                            <img src="{{ asset('images/latest_news.png') }}" alt="">
                        {% endif %}
                    </div>
                    <div class="col-md-9 col-sm-9 btm-job-right-blk">
                        <h1><a href="{{ article_detail_url(new) }}">{{ new.title }}</a></h1>
                        <p>{{ trim_content(new.content) }}</p>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="row">
        <div class="col-md-12 hot-job-more-btn"><input type="submit" value="BROWSE ALL"></div>
    </div>
</div>