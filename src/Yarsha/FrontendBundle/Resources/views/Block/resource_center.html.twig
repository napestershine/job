<div class="col-md-4 col-sm-4">
    <h3><i class="fa fa-users" aria-hidden="true"></i> &nbsp;Resources Center - Loksewa</h3>
    <ul class="hot-job-list btm-job-search-blk">
        {% for loksewaResource in loksewaResources %}
            <li>
                <div class="row">
                    <div class="col-md-3 col-sm-3 btm-job-left-blk">
                        {% if loksewaResource.image | length %}
                            <img src="{{ asset('images/resource_center_image.png') }}" alt="">
                        {% else %}
                            <img src="{{ asset('images/resource_center_image.png') }}" alt="">
                        {% endif %}
                        {#<img src="{{ imgSrc }}" alt="">#}
                    </div>

                    <div class="col-md-9 col-sm-9 btm-job-right-blk">
                        <h1><a href="{{ article_detail_url(loksewaResource) }}">{{ loksewaResource.title }}</a></h1>
                        <p>{{ trim_content(loksewaResource.content) }}</p>
                    </div>
                </div>

            </li>
        {% endfor %}
    </ul>
    <div class="row">
        <div class="col-md-12 hot-job-more-btn"><input type="submit" value="BROWSE ALL"></div>
    </div>
</div>