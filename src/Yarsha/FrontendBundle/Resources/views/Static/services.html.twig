{% macro serviceLessContentNew(title, content, id, image, index) %}


    {% if index <= 4 %}

        {% if index == 4 %} <div class="clearfix"></div> {% endif %}

        <div class="col-xs-12 {{ index == 4 ? 'col-sm-8 col-md-8' : 'col-sm-4 col-md-4' }}">
            {% if index == 4 %}
                <div class="service-area second-line">
                    <div class="row">
                        <div class="col-xs-12 col-sm-4 col-md-4 " style="background-color: rgba(56, 56, 60, 0.20); overflow: hidden">
                            {#<i class="fa {{ iconClass }} service-area-icon"></i>#}
                            <img src="{{ asset('static/images/'~image) }}" style="width: 385px;height:250px;">

                        </div>
                        <div class="caption col-xs-12 col-sm-8 col-md-8">
                            <h4>{{ title }}</h4>
                            <p>{{ content | raw | slice(0,630) ~ '..'}}</p>
                            <p>
                                <a href="#" class="read-more"
                                   data-content="{{ content }}"
                                   data-title="{{ title }}"
                                   >Read More...</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="service-area">
                    <div style="background-color: rgba(56, 56, 60, 0.20)">
                        <img src="{{ asset('static/images/'~image) }}" >

                    </div>
                    <div class="caption">
                        <h4>{{ title }}</h4>
                        <p>{{ content | raw | slice(0,140) ~ '..' }}</p>
                        <p>
                            <a href="#" class="read-more"
                               data-content="{{ content }}"
                               data-title="{{ title }}"
                               >Read More...</a>
                        </p>
                    </div>
                </div>
            {% endif %}

        </div>
    {% else %}
        <div class="caption" id="same-one">
            <h4>{{ title }}</h4>
            <p>{{ content | raw | slice(0, 105) ~ '..' }}</p>
            <p>
                <a href="#" class="read-more"
                   data-content="{{ content }}"
                   data-title="{{ title }}"
                    >Read More...</a>
