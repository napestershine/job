{% macro serviceOverlay(title, content, id, iconClass) %}

    <div class="services-overlay">
        <div class="col-md-12 col-sm-12 col-xs-12 carrer-blk" data-hidden="1">
            <div class="text-center career-icon services-late-class">
                <i class="fa {{ iconClass }} service-detail-icon"></i>
            </div>
            <div class="col-md-offset-1 col-md-10 col-sm-11 col-xs-12" style="margin-bottom: 10px;">
                <h1>{{ title }}</h1>
                {{ content | raw }}
            </div>
        </div>
    </div>

{% endmacro %}

{% macro serviceDetail(title,content,id,iconClass) %}
    <div class="col-md-12 col-sm-12 col-xs-12 carrer-blk hidden-service" data-hidden="1" id="{{ id }}">
        <div class="col-md-1 text-center career-icon services-late-class">
            <i class="fa {{ iconClass }}"></i>
        </div>
        <div class="col-md-11 col-sm-11 col-xs-12">
            <h1>{{ title }}</h1>
            <p>{{ content | raw }}</p>
            <a href="#" class="services-back-btn" onclick="hideDetails(event,'{{ id }}')">back</a>
